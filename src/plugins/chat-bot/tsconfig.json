{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "strict": false,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "server/**/*.ts",
    "strapi-server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
